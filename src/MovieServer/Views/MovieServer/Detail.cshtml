@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Tousignant Movie Server";
}

<div>
    <h1>@ViewBag.SeriesTitle</h1>
    <h2>Year Released: @ViewBag.ReleaseDate</h2>

    <h5>Description:</h5>
    <div>@Html.Raw(ViewBag.Description)</div>

    @if(ViewBag.Actors.Length > 0)
    {
        <h5>Actors/Actresses</h5>
        <div>
            <ul>
                @foreach (var actor in ViewBag.Actors)
                {
                    <li>@actor</li>
                }
            </ul>
        </div>
    }
</div>
