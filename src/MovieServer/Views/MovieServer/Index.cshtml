@model MovieServer.Models.Movie[]


@{
    ViewBag.Title = "Movies";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-3">
        @foreach (var movie in Model)
        {
            <h4>@Html.ActionLink(movie.DisplayText, "Detail", "MovieServer",
               new { id = movie.Id }, new { })</h4>
            <a href="@Url.Action("Detail", "MovieServer" ,new { id = movie.Id })">
            <img src="~/Images/@movie.CoverImageFileName"
                 alt="@movie.DisplayText"
                 class="img-responsive" />
            </a>
        }
    </div>
</div>
